<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DefaultProfile">
        <item name="android:src">@drawable/ic_person_white_24dp</item>
        <item name="tint">@color/profile_tint</item>
    </style>

    <style name="RowTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RowSubtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/subtitle_grey</item>
    </style>

    <style name="DevNoteStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FilledBoxTransparent" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

</resources>